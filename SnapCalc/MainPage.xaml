                </Picker.ItemsSource>
            </Picker>

            
            <Picker x:Name="Aperture1" Title="Aperture" SelectedIndexChanged="OnAnythingChange">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
