                        <x:String>1/640s</x:String>
                        <x:String>1/500s</x:String>
                        <x:String>1/400s</x:String>
                        <x:String>1/320s</x:String>
                        <x:String>1/250s</x:String>
                        <x:String>1/200s</x:String>
                        <x:String>1/160s</x:String>
                        <x:String>1/125s</x:String>
                        <x:String>1/100s</x:String>
                        <x:String>1/80s</x:String>
