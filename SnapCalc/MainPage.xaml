<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapCalc.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10,0" Spacing="16">
            
            <Image Source="snapcalc.png" HeightRequest="64" Aspect="AspectFit"/>

            <CarouselView x:Name="currentNd" Loop="False" PeekAreaInsets="120">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" SnapPointsType="Mandatory"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Label FontSize="Small" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding Name}" />
                            <Label FontSize="Micro" HorizontalTextAlignment="Center" Text="{Binding Description}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <Picker x:Name="NdOrig" Title="ND filter" SelectedIndexChanged="OnAnythingChange">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>no ND</x:String>
                        <x:String>ND2(1 stop)-variable</x:String>
                        <x:String>ND4(2 stops)</x:String>
                        <x:String>ND8(3 stops)</x:String>
                        <x:String>ND16(4 stops)-variable</x:String>
                        <x:String>ND32(5 stops)-variable</x:String>
                        <x:String>ND64(6 stops)</x:String>
                        <x:String>ND1000(~10 stops)</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Picker x:Name="Shutter1" Title="Shutter" SelectedIndexChanged="OnAnythingChange">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
