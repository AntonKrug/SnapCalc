<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapCalc.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10,0" Spacing="16">
            
            <Image Source="snapcalc.png" HeightRequest="64" Aspect="AspectFit"/>

            <CarouselView x:Name="CurrentNd" Loop="False" PeekAreaInsets="140" PositionChanged="OnAnythingChange">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" SnapPointsType="Mandatory" SnapPointsAlignment="Center"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="CurrentItem">
                                        <VisualState.Setters>
                                            <Setter Property="Opacity" Value="1.0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PreviousItem">
                                        <VisualState.Setters>
                                            <Setter Property="Opacity" Value="0.4" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="NextItem">
                                        <VisualState.Setters>
                                            <Setter Property="Opacity" Value="0.4" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="DefaultItem">
                                        <VisualState.Setters>
                                            <Setter Property="Opacity" Value="0.2" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Frame BorderColor="DarkGray" CornerRadius="0" Margin="20" Padding="5" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center">
                                <StackLayout>
                                    <Label FontSize="Small" FontAttributes="Bold"   HorizontalTextAlignment="Center" Text="{Binding Name}" />
                                    <Label FontSize="Micro" FontAttributes="Italic" HorizontalTextAlignment="Center" Text="{Binding Description}" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        
                        <!--<VerticalStackLayout>
                            <Label FontSize="Small" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding Name}" />
                            <Label FontSize="Micro" HorizontalTextAlignment="Center" Text="{Binding Description}" />
                        </VerticalStackLayout>-->
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <Picker x:Name="Shutter1" Title="Shutter" SelectedIndexChanged="OnAnythingChange">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
